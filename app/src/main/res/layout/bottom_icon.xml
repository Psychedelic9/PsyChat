<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bottom_layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bottom_icon"
            android:layout_marginTop="3dp"

            />

        <ImageView
            android:id="@+id/bottom_layout_icon_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bottom_icon"
            android:layout_marginTop="3dp"
            tools:src="@drawable/tab_weixin" />
    </FrameLayout>

    <TextView
        android:id="@+id/bottom_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="@string/chat"
        android:textColor="#9A9A9A"
        android:textSize="@dimen/bottom_text_size" />
</LinearLayout>

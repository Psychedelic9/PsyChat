<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VoiceCallActivity">
    <TextView
        android:id="@+id/voice_call_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电话"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/voice_call_bt_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接听"
        android:onClick="answerCall"
        app:layout_constraintTop_toBottomOf="@+id/voice_call_text"
        />
    <Button
        android:id="@+id/voice_call_bt_reject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="挂断"
        android:onClick="endCall"
        app:layout_constraintTop_toBottomOf="@+id/voice_call_bt_yes"/>
    <Button
        android:id="@+id/voice_call_bt_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拒绝"
        android:onClick="rejectCall"
        app:layout_constraintTop_toBottomOf="@+id/voice_call_bt_reject"/>
</androidx.constraintlayout.widget.ConstraintLayout>
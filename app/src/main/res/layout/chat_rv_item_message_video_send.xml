<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemVideo"
            type="com.bai.psychedelic.psychat.data.entity.ChatItemEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:visibility="gone"
            android:id="@+id/chat_activity_tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@{itemVideo.sendTime}"
            android:textColor="@color/gray_pressed"
            android:layout_marginStart="10dp"
            tools:text="123123123123"
            app:layout_constraintTop_toTopOf="@+id/chat_activity_iv_send_video_user_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chat_activity_ll_send_video_chat_content"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_activity_ll_send_video_chat_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/chat_activity_iv_send_video_user_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toLeftOf="@+id/chat_activity_iv_send_video_user_icon"
            >

            <ImageView
                android:id="@+id/chat_activity_iv_send_video_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chatto_bg_normal"
                android:gravity="center_vertical"
                android:minHeight="43dp"
                android:src="@drawable/large_logo_default_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/exo_icon_play"
                app:layout_constraintTop_toTopOf="@+id/chat_activity_iv_send_video_chat_content"
                app:layout_constraintBottom_toBottomOf="@+id/chat_activity_iv_send_video_chat_content"
                app:layout_constraintRight_toRightOf="@+id/chat_activity_iv_send_video_chat_content"
                app:layout_constraintLeft_toLeftOf="@+id/chat_activity_iv_send_video_chat_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/chat_activity_iv_send_video_user_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/chat_activity_ll_send_video_chat_content"
            android:src="@drawable/icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
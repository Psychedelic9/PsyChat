<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/dialog_loading_bg"
        >
        <ImageView
            android:id="@+id/dialog_recorder_iv_record_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recorder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/dialog_recorder_iv_voice_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/v1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dialog_recorder_iv_record_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/dialog_recorder_tv_label"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finger_up_to_cancel_send"
            app:layout_constraintTop_toBottomOf="@+id/dialog_recorder_iv_record_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
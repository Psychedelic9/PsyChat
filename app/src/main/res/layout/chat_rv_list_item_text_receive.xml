<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.bai.psychedelic.psychat.data.entity.ChatItemEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_activity_iv_receive_user_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/chat_activity_cl_receive_chat_content"
            />
        <TextView
            android:id="@+id/chat_activity_tv_time"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@{item.sendTime}"
            android:textColor="@color/gray_pressed"
            tools:text="1231231233312"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/chat_activity_iv_receive_user_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chat_activity_cl_receive_chat_content"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_activity_cl_receive_chat_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/chat_activity_iv_receive_user_icon"
            app:layout_constraintLeft_toRightOf="@+id/chat_activity_iv_receive_user_icon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            >
            <TextView
                android:id="@+id/chat_activity_ll_receive_chat_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="43dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/chatfrom_bg_normal"
                android:text="@{item.content}"
                android:textSize="20sp"
                tools:text="1123123123223123123123123123123123123123123" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>